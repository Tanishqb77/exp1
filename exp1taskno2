#include<stdio.h>

int main()

{
    int p,c,m,avg;
    printf("\nEnter physics marks :");
    scanf("%d",&p);
    printf("Enter chemistry marks :");
    scanf("%d",&c);
    printf("Enter maths marks :");
    scanf("%d",&m);
    avg=(p+c+m)/3;
    printf("Average Marks=%d",avg);
    (avg>=50)? printf("\n\nEligible For Admisiion \n"):printf("\n\n Not Eligible For Admission \n");
    return 0;
}
